{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <a href="{{ path('client_new') }}">Create new</a>
    <table class="table" id="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nom }}</td>
                <td>{{ client.Adresse }}</td>
                <td>
                    <button type="button" class="btn btn-primary btn-sm py-1">
                    <a href="{{ path('client_show', {'id': client.id}) }}">show</a>
                </button>
                <button type="button" class="btn btn-danger btn-sm py-1">
                    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
